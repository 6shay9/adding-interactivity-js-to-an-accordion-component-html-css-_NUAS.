  <body>
    <button class="toggle-button">Show All Sections</button>

    <div class="accordion">
      <div class="accordion-item">
        <div class="accordion-header">Section 1</div>
        <div class="accordion-content">
          <p>This is the content for section 1. It can contain any HTML elements.</p>
        </div>
      </div>

      <div class="accordion-item">
        <div class="accordion-header">Section 2</div>
        <div class="accordion-content">
          <p>This is the content for section 2. It can contain any HTML elements.</p>
        </div>
      </div>

      <div class="accordion-item">
        <div class="accordion-header">Section 3</div>
        <div class="accordion-content">
          <p>This is the content for section 3. It can contain any HTML elements.</p>
        </div>
      </div>
    </div>

    <script>
      
  const accordionHeaders = document.querySelectorAll(".accordion-header");
  const toggleButton = document.querySelector(".toggle-button");
  const accordionItems = document.querySelectorAll(".accordion-item");

 
  accordionHeaders.forEach(header => {
    header.addEventListener("click", () => {
      const item = header.parentElement;
      item.classList.toggle("active");

      if (item.classList.contains("active")) {
        console.log(`${header.textContent} is now OPEN`);
      } else {
        console.log(`${header.textContent} is now CLOSED`);
      }
    });
  });

 
  toggleButton.addEventListener("click", () => {
    const allOpen = Array.from(accordionItems).every(item =>
      item.classList.contains("active")
    );

    if (allOpen) {
      accordionItems.forEach(item => item.classList.remove("active"));
      toggleButton.textContent = "Show All Sections";
      console.log("All sections CLOSED by toggle button");
    } else {
      accordionItems.forEach(item => item.classList.add("active"));
      toggleButton.textContent = "Hide All Sections";
      console.log("All sections OPENED by toggle button");
    }
  });
</script>

    
  </body>
